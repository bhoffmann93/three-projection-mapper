{
  "name": "three-projection-mapper",
  "version": "0.1.0",
  "description": "Projection mapping library for Three.js with interactive warp grid control, bicubic interpolation, and multi-window synchronization",
  "type": "module",
  "main": "dist/lib.js",
  "module": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    },
    "./addons": {
      "import": "./dist/addons/index.js",
      "types": "./dist/addons/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.ts",
    "prepare": "npm run build:lib",
    "prepublishOnly": "npm run build:lib",
    "test": "vitest",
    "preview": "vite preview",
    "start": "npm run dev"
  },
  "keywords": [
    "threejs",
    "three.js",
    "projection-mapping",
    "webgl",
    "warp",
    "mesh-warping",
    "bicubic",
    "perspective",
    "calibration",
    "projector"
  ],
  "author": "Bernhard Hoffmann",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhoffmann93/three-projection-mapper.git"
  },
  "homepage": "https://github.com/bhoffmann93/three-projection-mapper#readme",
  "bugs": {
    "url": "https://github.com/bhoffmann93/three-projection-mapper/issues"
  },
  "peerDependencies": {
    "@types/three": ">=0.150.0",
    "three": ">=0.150.0"
  },
  "peerDependenciesMeta": {
    "@types/three": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tweakpane/core": "^2.0.5",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "p5": "^2.2.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-glsl": "^1.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "convex-hull": "^1.0.3",
    "tweakpane": "^4.0.5"
  }
}
